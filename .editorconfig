# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4

[*.{rst,ini}]
indent_style = space
indent_size = 4

[*.{yml,html,xml,xsl,json}]
indent_style = space
indent_size = 2
